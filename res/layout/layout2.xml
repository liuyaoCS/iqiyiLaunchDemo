<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:gravity="center_horizontal"
    android:orientation="vertical" >

	<FrameLayout 
	     android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         >
        <RelativeLayout
            android:id="@+id/v2_glass_layout"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:gravity="center_horizontal">
		    <ImageView
	            android:id="@+id/v2_glass"
	            android:layout_width="@dimen/v2_glass_w"
	            android:layout_height="@dimen/v2_glass_h"                 
	            android:background="@drawable/v2_glass" 	           
	         	android:layout_marginTop="@dimen/v2_glass_t"/>
	  </RelativeLayout>
	  
      <RelativeLayout
           android:id="@+id/v2_star_layout"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:gravity="center_horizontal"           
          >
	       <ImageView
	           android:id="@+id/v2_star"
	           android:layout_width="@dimen/v2_star_w"
	           android:layout_height="@dimen/v2_star_h"            
	           android:layout_marginTop="@dimen/v2_star_t"
	           android:src="@drawable/v2_star"
	           android:visibility="invisible"
	      
	         />
       </RelativeLayout>
       
      <RelativeLayout
           android:id="@+id/v2_rotate_layout"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:gravity="center_horizontal"           
          >
	       <ImageView
	           android:id="@+id/v2_rotate"
	           android:layout_width="@dimen/v2_rotate_w"
	           android:layout_height="@dimen/v2_rotate_h"            
	           android:layout_marginTop="@dimen/v2_rotate_t"
	           android:src="@drawable/v2_rotate"
	           android:visibility="invisible"
	           
	         />
       </RelativeLayout>
         
       <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           
           android:id="@+id/v2_cloud_layout"
          >
			<ImageView
	            android:id="@+id/v2_cloud"
	            android:layout_width="@dimen/v2_cloud_w"
	            android:layout_height="@dimen/v2_cloud_h"              
				android:layout_marginTop="@dimen/v2_cloud_t"	                       
	            android:src="@drawable/v2_cloud"
	            android:visibility="invisible"
	             />
		</RelativeLayout>
		
		
	</FrameLayout>
	

    <ImageView
        android:id="@+id/v2_text1"
        android:layout_width="@dimen/v2_text1_w"
        android:layout_height="@dimen/v2_text1_h"
        android:layout_marginTop="@dimen/v2_text1_t"
        android:src="@drawable/v2_text1" 
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/v2_text2"
        android:layout_width="@dimen/v2_text2_w"
        android:layout_height="@dimen/v2_text2_h"
        android:layout_marginTop="@dimen/v2_text2_t"
        android:src="@drawable/v2_text2" 
        android:visibility="invisible"/>

</LinearLayout>